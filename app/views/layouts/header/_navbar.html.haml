.container
  #mobile.m-nav
    %a{href: "javascript:void(0)", id: 'close-nav'}
      &times;
    %a{href: "/"}
      Home
    %a{href: "/shop"}
      Shop
  .container#test-here
    .d-flex.flex-row.justify-content-between
      .p-2
        %span#m-click
          &#9776;
      .p-2
        %h5 logo
  #desktop
    .d-flex.flex-row.justify-content-between
      .p-2
        .p-0
          = link_to '/' do
            %span{style: 'font-size: 28px;'}
              %strong{style: 'letter-spacing: 4px; color: chocolate'} Pr
      .p-2.d-flex.flex-row.justify-content-center
        %div.p-2
          = link_to "/" do
            %span{style: 'font-weight: 400;'} HOME
        %div.p-2.mx-5
          = link_to shop_path do
            %span{style: 'font-weight: 400;'} SHOP
        %div.p-2
          %span{style: 'font-weight: 400;'} CONTACT US
        - if user_signed_in?
          %div.mx-2
          = link_to "Log out",  destroy_user_session_path, :method => :delete, :class => 'btn btn-outline-danger'
        - else
          %div.mx-2
          = link_to "Sign in",  new_user_session_path, :class => 'btn btn-primary'
          %div.mx-2
          = link_to "Sign up",  new_user_registration_path, :class => 'btn btn-outline-primary'
= javascript_pack_tag "navbar"
